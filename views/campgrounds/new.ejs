 <% include ../partials/header %>
 <div class="container">
	<div class="row" style="width:30%; margin: 0 auto;">
		<h3>Create a New Campground</h3>
		<form action="/campgrounds" method="POST">
			<div class="form-group">
			<input class ="form-control" type="text" name="name" placeholder="Name of Campground">
			</div>
			<div class="form-group">
			<label for="location">Location</label>
			<input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
			</div>
			<div class="form-group">
			<input class ="form-control" type="text" name="image" placeholder="Image url">
			</div>
			<div class="form-group">
			<input class ="form-control" type="number" name="price" placeholder="price" min="1" step="1">
			</div>
			<div class="form-group">
			<input class ="form-control" type="text" name="description" placeholder="Give a description of the camp">
			</div>
			<div class="form-group">
			<button class="btn btn-md btn-default btn-primary btn-block">Submit</button>
			</div>
			<a href="/campgrounds">Go Back</a>
		</form>
	</div>
	</div>
<% include ../partials/footer %>
