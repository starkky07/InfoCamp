<% include ../partials/header %>
   
   <div class ="container">
      <header class="jumbotron">
         <div class="conatiner">
         <h1>Welcome to Campgrounds</h1>
         <p>View our hand picked campgrounds from all over the India</p>
         
         <p><a class= "btn btn-primary btn-large" href="/campgrounds/new">Add a new Campground</a>
         </p>
         </div>
      </header>
      <div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% Campgrounds.forEach(function(campground){%>
         <div class="col-md-3 col-sm-6">
            
            <img class="img-thumbnail" src = "<%= campground.image%>" display="inline">
            <div class="caption">
            	<h5><strong> <%= campground.name %></strong></h5>
            <h6> <%= campground.location %></h6>
            </div>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">more info</a>
            
         </div>
      <%})%>
	   </div>
   </div>
<% include ../partials/footer %>
</html>